<%- include('../../partials/head.ejs') %> 

<div class="row my-5">
  <div class="col-md-2"></div>
  <div class="col-md-10">
    <div class="card card-body mx-5">
      <h2 class="my-2">Create News</h2>


      <form action="/news/create-news" method="POST" enctype="multipart/form-data">
      
          <div class="form-group">
            <label for="title">Enter News Title :</label>
            <input type="text" name="title" id="title" placeholder="Enter Title" class="form-control">
          </div>

          <div class="form-group">
            <label for="category" class="mr-5">Category :</label>
            <select name="category" id="category">
              <option value="1">Category One</option>
              <option value="2">Category Two</option>
              <option value="3">Category Three</option>
            </select>
          </div>

          <div class="form-group">
            <label for="tiny-mce-post-body">Enter Your News Body</label>
            <textarea name="body" id="tiny-mce-post-body" class="form-control" cols="30" rows="10">
            </textarea>
        </div>

          <div class="form-group">
            <label for="author" class="mr-5">Author :</label>
            <select name="author" id="author">
              <option value="1">Author One</option>
              <option value="2">Author Two</option>
              <option value="3">Author Three</option>
            </select>
          </div>

          <div class="input-group-mb-3">
            <div class="input-group-prepend my-2">
                <span class="input-group-text">Upload</span>
            </div>
            <div class="custom-file my-2">
                <input type="file" name="news-thumbnail" class="custom-file-input" id="inputGroupFile">
                <label for="inputGroupFile" class="custom-file-label">Choose File</label>
            </div>
        </div>

        <div class="form-group">
          <label for="sourceLink">Source :</label>
          <input type="text" name="sourceLink" id="sourceLink" class="form-control">
        </div>

        <input type="submit" class="btn btn-primary" value="Create News">

      </form>


    </div>
  </div>
</div>


<%- include('../../partials/footer.ejs') %>
<script src="https://cdn.tiny.cloud/1/upwt06bkd22wjvd85hwgqgio2i717lcqw64ao14miyke0lyv/tinymce/5/tinymce.min.js"></script>
<script src="/scripts/tinymce.js"></script>

<script>
    $('#inputGroupFile').on('change',function(e){
        let filename=e.target.files[0].name
        $(this).next('.custom-file-label').html(filename)
    })
</script>  
    
     </body>
</html>
